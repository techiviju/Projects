    <%@include file="navbar.jsp"%>

    <!-- Check if doctor is logged in -->
	<c:if test="${empty doctorObj }">
		<c:redirect url="../doctor_login.jsp"></c:redirect>
	</c:if>

    <div class="content-wrapper container-fluid">
        <div class="row w-100 justify-content-center">
            <div class="col-md-11 col-lg-10">
                
                <!-- Main Header Title (Matching Image Style) -->
                <h2 class="text-center page-header">
                    <i class="fa-solid fa-calendar-alt me-2"></i> My Appointments
                </h2>

                <div class="card my-card">
                    <div class="card-body p-md-5 p-3">
                        <h4 class="text-center text-muted mb-4 border-bottom pb-3">
                            <i class="fa-solid fa-list-check me-2"></i> Appointment List
                        </h4>

                        <!-- Message Handling -->
                        <c:if test="${not empty successMsg }">
                            <div class="alert alert-success text-center" role="alert">${successMsg}</div>
                            <c:remove var="successMsg" scope="session" />
                        </c:if>
                        <c:if test="${not empty errorMsg }">
                            <div class="alert alert-danger text-center" role="alert">${errorMsg}</div>
                            <c:remove var="errorMsg" scope="session" />
                        </c:if>
                        
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Full Name</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Age</th>
                                        <th scope="col">Appointment Date</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Diseases</th>
                                        <th scope="col">Status</th>
                                        <th scope="col" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%
                                        // Retrieve doctor object from session
                                        Doctor doctor = (Doctor) session.getAttribute("doctorObj");
                                        // Initialize DAO
                                        AppointmentDAO appDAO = new AppointmentDAO(DBConnection.getConn());
                                        // Fetch all appointments for the logged-in doctor
                                        List<Appointment> list = appDAO.getAllAppointmentByLoginDoctor(doctor.getId());
                                        
                                        if (list.isEmpty()) {
                                    %>
                                    <tr>
                                        <td colspan="8" class="text-center text-muted py-4">No appointments scheduled yet.</td>
                                    </tr>
                                    <%
                                        }
                                        
                                        for (Appointment applist : list) {
                                    %>
                                    <tr>
                                        <td><%=applist.getFullName()%></td>
                                        <td><%=applist.getGender()%></td>
                                        <td><%=applist.getAge()%></td>
                                        <td><%=applist.getAppointmentDate()%></td>
                                        <td><%=applist.getPhone()%></td>
                                        <td><%=applist.getDiseases()%></td>
                                        <td>
                                        	<%
                                                String status = applist.getStatus();
                                                if ("Pending".equals(status)) {
                                            %> <span class="badge bg-warning text-dark"><%=status%></span> <%
                                                } else {
                                            %> <span class="badge bg-success"><%=status%></span> <%
                                                }
                                            %>
                                        </td>
                                        <td class="text-center">
                                            <%
                                                if ("Pending".equals(applist.getStatus())) {
                                            %> 
                                            <!-- Link to comment/update page for pending appointments -->
                                            <a href="comment.jsp?id=<%=applist.getId()%>" class="btn btn-success btn-sm btn-comment">Comment</a>
                                            <%
                                                } else {
                                            %>
                                            <!-- Disabled button for completed appointments -->
                                            <button class="btn btn-secondary btn-sm disabled btn-comment"><i class="fa fa-check me-1"></i> Completed</button>
                                            <%
                                                }
                                            %>
                                        </td>
                                    </tr>
                                    <%
                                        }
                                    %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
