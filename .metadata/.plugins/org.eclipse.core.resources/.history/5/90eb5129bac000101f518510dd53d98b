                            DoctorDAO dDAO = new DoctorDAO(DBConnection.getConn());
                            AppointmentDAO appDAO = new AppointmentDAO(DBConnection.getConn());
                            List<Appointment> list = appDAO.getAllAppointmentByLoginUser(user.getId());
